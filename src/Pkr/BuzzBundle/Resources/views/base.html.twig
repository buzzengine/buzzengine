<!DOCTYPE html>
<html>
    <head>
        {% block head %}
            <title>{% block title %}{% endblock %}BUZZ</title>

            {% block stylesheets %}
                <link href="{{ asset('/bundles/pkrbuzz/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
                <link href="{{ asset('/bundles/pkrbuzz/css/layout.css') }}" type="text/css" rel="stylesheet" />
            {% endblock %}

            {% block javascripts %}
                <script src="{{ asset('/bundles/pkrbuzz/js/jquery.min.js') }}" type="text/javascript"></script>
                <script src="{{ asset('/bundles/pkrbuzz/js/bootstrap.min.js') }}" type="text/javascript"></script>
                <script src="{{ asset('/bundles/pkrbuzz/js/app.js') }}" type="text/javascript"></script>
            {% endblock %}
        {% endblock %}
    </head>
    <body>
        <div class="container">
            <div class="navbar">
                <div class="navbar-inner">
                    <div class="container">
                        <span class="brand">{% block headline %}{% endblock %}</span>
                        <ul class="nav pull-right">
                            <li><a href="{{ path('topic') }}">Topics</a></li>
                            <li><a href="{{ path('category') }}">Categories</a></li>
                            <li class="divider-vertical"></li>
                            <li><a href="{{ path('fetch') }}">Fetch</a></li>
                            <li><a href="{{ path('log') }}">Log</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            {% block content %}{% endblock %}
        </div>
    </body>
</html>
