<h1>Query list of Topic '{{ topic.name }}'</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Value</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in queries %}
        <tr>
            <td><a href="{{ path('query_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.value }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('query_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('query_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('query_new', { 'id': topic.id }) }}">
            Create a new entry
        </a>
    </li>
</ul>
