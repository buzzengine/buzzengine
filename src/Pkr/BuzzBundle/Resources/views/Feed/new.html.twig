{% extends 'PkrBuzzBundle::base.html.twig' %}

{% block content %}
    <h1>Feed creation</h1>

    <form action="{{ path('feed_create') }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <p>
            <button type="submit">Create</button>
        </p>
    </form>

    <ul class="record_actions">
        <li>
            <a href="{{ path('feed', { 'id': entity.category.id }) }}">
                Back to the list
            </a>
        </li>
    </ul>
{% endblock %}
