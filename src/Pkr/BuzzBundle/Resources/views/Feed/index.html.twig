{% extends 'PkrBuzzBundle::base.html.twig' %}

{% block content %}
    <h1>Feed list of Category '{{ category.name }}'</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Url</th>
                <th>Disabled</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in feeds %}
            <tr>
                <td><a href="{{ path('feed_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.url }}</td>
                <td>{% if entity.disabled == true %}true{% else %}false{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('feed_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('feed_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('feed_new', { 'id': category.id }) }}">
                Create a new entry
            </a>
        </li>
        <li>
            <a href="{{ path('category_show', { 'id': category.id }) }}">
                Back to category
            </a>
        </li>
    </ul>
{% endblock %}
