{% extends 'PkrBuzzBundle::base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="span12">
            <p class="margin-bottom">
                <a class="btn" href="{{ path('topic') }}">
                    Back
                </a>
            </p>
        </div>
    </div>

    <h2>Topic creation</h2>

    <form action="{{ path('topic_create') }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <p>
            <button type="submit">Create</button>
        </p>
    </form>
{% endblock %}
