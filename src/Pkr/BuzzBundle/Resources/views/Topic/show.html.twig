{% extends 'PkrBuzzBundle::base.html.twig' %}

{% block content %}
    <h1>Topic</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('topic') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('topic_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>
            <a href="{{ path('query', { 'id': entity.id }) }}">
                Queries
            </a>
        </li>
        <li>
            <a href="{{ path('topicFeed', { 'id': entity.id }) }}">
                Topic Feeds
            </a>
        </li>
        <li>
            <a href="{{ path('fetch', { 'id': entity.id }) }}">
                Fetch Topic
            </a>
        </li>
        <li>
            <form action="{{ path('topic_delete', { 'id': entity.id }) }}" method="post">
                {{ form_widget(delete_form) }}
                <button type="submit">Delete</button>
            </form>
        </li>
    </ul>
{% endblock %}
