{% extends 'PkrBuzzBundle::base.html.twig' %}

{% block headline %}Edit category{% endblock %}

{% block content %}
    <div class="row">
        <div class="span8">
            <p class="margin-bottom">
                <a class="btn btn-small" href="{{ path('category') }}">
                    Back
                </a>
            </p>
        </div>
        <div class="span4">
            {% if entity.feeds is empty and entity.rawFeeds is empty %}
                <form
                    class="pull-right"
                    action="{{ path('category_delete', { 'id': entity.id }) }}"
                    method="post"
                >
                    {{ form_widget(delete_form) }}
                    <button class="btn btn-small btn-danger" type="submit">Delete</button>
                </form>
            {% endif %}
        </div>
    </div>

    <form action="{{ path('category_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>
{% endblock %}
